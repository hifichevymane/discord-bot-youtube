{
  "name": "discord-bot-youtube",
  "version": "1.2.0",
  "description": "the discord bot written on js to play youtube videos in the voice channel",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx tsx watch src/main.ts",
    "deploy-commands": "npx tsx src/deploy-commands.ts",
    "start": "env NODE_ENV=development pm2 start src/main.js --name=discord-bot --watch",
    "stop": "pm2 stop discord-bot",
    "logs": "pm2 logs discord-bot --lines=100",
    "build": "npx tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "@distube/ytdl-core": "^4.15.1",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "libsodium-wrappers": "^0.7.15"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
