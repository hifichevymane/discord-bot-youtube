{
  "compilerOptions": {
    "target": "ES2020" /* Target modern JavaScript */,
    "module": "ESNext" /* Use ES modules for output */,
    "moduleResolution": "bundler" /* Resolve modules in a Node.js environment */,
    "rootDir": "./src" /* Specify root directory of TypeScript files */,
    "outDir": "./dist" /* Output directory for compiled files */,
    "strict": true /* Enable strict type checking */,
    "esModuleInterop": true /* Interoperate with CommonJS modules */,
    "forceConsistentCasingInFileNames": true /* Ensure consistent import paths */,
    "allowSyntheticDefaultImports": true /* Allow default imports from modules without default exports */,
    "resolveJsonModule": true /* Include JSON module resolution */,
    "sourceMap": true /* Generate source maps for debugging */,
    "noEmitOnError": true /* Prevent emitting files on compilation error */
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,mjs}",
      "outputCheck": ["js", "json", "mjs"]
    }
  }
}
